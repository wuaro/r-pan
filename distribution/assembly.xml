<assembly>
    <id>${project.version}</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <!--会打出三种类型的压缩包-->
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <!--打出的包会包含conf、bin目录下的全部文件-->
        <fileSet>
            <includes>
                <include>conf/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <includes>
                <include>bin/*</include>
            </includes>
            <!--打包会给bin目录下的文件一个0755的执行权限-->
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <!--打好的jar包名称和放置目录（上一级的server/target/r-pan-server.jar）-->
            <source>../server/target/r-pan-server.jar</source>
            <outputDirectory>target/</outputDirectory>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.wuaro.pan:r-pan-server</include>
            </includes>
        </moduleSet>
    </moduleSets>
</assembly>